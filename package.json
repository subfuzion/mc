{
  "name": "mc",
  "description": "run a suite of programs and report their exit codes",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.6.0"
  },
  "bin": {
    "mc": "bin/main.ts"
  },
  "imports": {
    "#lib/*": "./lib/*",
    "#test/*": "./test/*"
  },
  "scripts": {
    "test": "node --test --experimental-strip-types --disable-warning=ExperimentalWarning ./lib/**/*.test.ts",
    "check": "biome check && tsc",
    "fix": "biome check --write && tsc"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@types/node": "22.5.5",
    "typescript": "5.6.2"
  }
}
